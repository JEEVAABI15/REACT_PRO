pipeline {
    agent any
    environment {
        // Define directory variables
        PROJECT_DIR = '/home/redhat/Desktop/poc'
    }
    stages {
        stage('Checkout') {
            steps {
                script {
                    // Clone the repository into the project directory
                    dir("${PROJECT_DIR}") {
                        sh 'git clone https://github.com/JEEVAABI15/REACT_PRO.git'
                    }
                }
            }
        }
        stage('Setup Environment') {
            steps {
                script {
                    // Verify Node.js and npm installation
                    sh 'node -v'
                    sh 'npm -v'
                }
            }
        }
        stage('Build and Serve') {
            steps {
                script {
                    // Run npm commands and copy built files
                    dir("${PROJECT_DIR}/REACT_PRO") {
                        sh 'npm install'
                        sh 'npm run build'
                        sh 'cp -r dist/* /var/www/html/'
                    }
                }
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}

